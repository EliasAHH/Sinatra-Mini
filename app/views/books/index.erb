<h1> Books </h1>

<% @books.each do |b| %>
    <ul>
      <li><a href="/books/<%=b.id %>"> <%= b.title %> </a> </li>
      <a href="/books/<%=b.id%>/edit">EDIT</a>
      <form action="/books/<%=b.id%>" method="post">
        <input type="hidden" name="_method" value="delete"> 
        <input type="submit" value= "delete">
      </form>
    </ul>

<% end %>